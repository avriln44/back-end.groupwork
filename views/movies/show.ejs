<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <img src="<%= movies.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= movies.title %> - <%= movies.rating %>
                    </h5>
                    <p class="card-text">
                        <%= movies.description %>
                    </p>
                    <h7 class="text-muted">
                        Submitted by <%= movies.author.username %>
                    </h7>
                </div>
                <% if(currentUser && movies.author.equals(currentUser.id)) {%>
                    <div class="card-body">
                        <a href="/movie/<%= movies.id %>/edit" class="card-link btn btn-primary">Edit</a>
                        <form action="/movie/<%= movies.id %>?_method=DELETE" method="POST" class="d-inline"><button
                                class="btn btn-danger">Delete</button></form>
                    </div>
                    <% } %>
            </div>
            <form action="/movie/<%= movies.id %>/reviews" method="POST">
                <h2>Leave a review</h2>
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating: </label>
                    <input class="form-range" type="range" min="1" max="5" id="rating" name="review[rating]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Review</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="4"></textarea>
                </div>
                <% if(currentUser) {%>
                    <button class="btn btn-success mb-3">Submit</button>
                    <% } %>
            </form>
            <div>
                <% for(let review of movies.reviews){ %>
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">
                                Rating: <%= review.rating %>
                            </h5>
                            <p class="card-text">
                                Review: <%= review.body %>
                            </p>

                            <form action="/movie/<%= movies.id %>/reviews/<%= review.id %>?_method=DELETE"
                                method="POST">
                                <% if(currentUser) {%>
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                    <% } %>
                            </form>

                        </div>
                    </div>
                    <% } %>
            </div>