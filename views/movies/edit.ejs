<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit</h1>
        <div class="col-6 offset-3">
            <form action="/movie/<%= movies.id %>?_method=PUT" method="POST">
                <!-- Title input -->
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="movie[title]" value="<%= movies.title %>"
                        required>
                </div>
                <!-- Rating input -->
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <input class="form-control" type="number" id="rating" name="movie[rating]"
                        value="<%= movies.rating %>" required>
                </div>
                <!-- Image input -->
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" id="image" name="movie[image]" value="<%= movies.image %>"
                        required>
                </div>
                <!-- Description input -->
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="movie[description]"
                        required><%=movies.description %></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Save</button>
                </div>
            </form>
        </div>
    </div>