<% layout('layouts/boilerplate') %>
    <ul>
        <% for(let movie of movies){ %>
            <div class="card">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%= movie.image %>" alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= movie.title %> - <%= movie.rating %>
                            </h5>
                            <p class="card-text">
                                <%= movie.description %>
                            </p>
                            <a href="/movie/<%= movie.id %>" class="btn btn-primary">View <%= movie.title %></a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </ul>